using System;

namespace TestTime
{
    class Program
    {
        static void Main(string[] args)
        {
            Time t1 = new Time(10, 30);
            Time t2 = new Time(2, 45);
            Time t3 = new Time(120);

            Time sum = t1 + t2;
            Time diff = t1 - t2;

            Console.WriteLine("Time 1: " + t1);
            Console.WriteLine("Time 2: " + t2);
            Console.WriteLine("Sum (T1 + T2): " + sum);
            Console.WriteLine("Difference (T1 - T2): " + diff);
            Console.WriteLine("Time from minutes: " + t3);
        }
    }

    public struct Time
    {
        private readonly int minutes;

        public Time(int hh, int mm)
        {
            this.minutes = 60 * hh + mm;
        }

        public Time(int minutes)
        {
            this.minutes = minutes;
        }

        public int Hour => minutes / 60;
        public int Minute => minutes % 60;

        public static Time operator +(Time t1, Time t2)
        {
            return new Time(t1.minutes + t2.minutes);
        }

        public static Time operator -(Time t1, Time t2)
        {
            return new Time(Math.Max(0, t1.minutes - t2.minutes));
        }

        public override string ToString()
        {
            return string.Format("{0:D2}:{1:D2}", Hour, Minute);
        }
    }
}
